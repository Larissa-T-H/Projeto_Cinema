                        <span asp-validation-for="Sinopse" class="text-danger"></span>
                    </div>                
                </div>
            </div>

                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-outline-success" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                </div>
        </form>

<div>
    
</div>

