@model Cinema.Models.Filme

@{
    ViewData["Title"] = "Deletar";
}

<h1 style="color: red">Deletar</h1>

<h3 style="color: red">Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Filme</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sinopse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FilmeId" />
        <input type="submit" value="Deletar" class="btn btn-outline-danger" /> 
        <a asp-action="Index"class="btn btn-outline-secondary">Voltar</a>
    </form>
</div>
