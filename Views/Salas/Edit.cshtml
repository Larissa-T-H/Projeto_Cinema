@model Cinema.Models.Sala

@{
    ViewData["Title"] = "Editar";
}

    <h1>Editar</h1>

    <h4>Sala</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SalaId" />
                <div class="form-group">
                    <label asp-for="SalaNum" class="control-label"></label>
                    <input asp-for="SalaNum" class="form-control" />
                    <span asp-validation-for="SalaNum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-outline-success"/>
                     <a asp-action="Index"class="btn btn-outline-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
