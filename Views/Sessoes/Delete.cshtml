@model Cinema.Models.Sessao

@{
    ViewData["Title"] = "Deletar";
}

<h1 style="color: red">Deletar</h1>

<h3 style="color: red">Tem certeza de que deseja excluir?</h3>
<div>
    <h4>Sessão</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SessaoNum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessaoNum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sala)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sala.SalaNum)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Filme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Filme.Titulo)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDublado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDublado)
        </dd>
        <dt class = "col-sm-2">
